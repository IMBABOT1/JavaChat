<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javachat.HelloController">
    <TextArea fx:id="messageField" editable="false" VBox.vgrow="ALWAYS"></TextArea>
    <HBox>
        <TextField fx:id="textField" promptText="Enter message" onAction="#sendMsg"  HBox.hgrow="ALWAYS"></TextField>
        <Button HBox.hgrow="ALWAYS" maxWidth="-Infinity" text="Send Message" onAction="#sendMsg"></Button>
    </HBox>
</VBox>
